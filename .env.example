# FireWerk Environment Variables
# Copy this file to .env and update with your values

# Required: Path to prompts file (CSV or JSON)
PROMPT_FILE=./data/prompts.csv

# Output directory for generated images
OUTPUT_DIR=./output

# Browser configuration
HEADLESS=true
FIRELFY_URL=https://firefly.adobe.com/generate/images

# Playwright-specific (recommended)
STORAGE_STATE=./data/storageState.json
PW_HEADLESS=true
PW_VIEWPORT_W=1366
PW_VIEWPORT_H=900

# Legacy Puppeteer (if using start:puppeteer)
COOKIES_PATH=./data/cookies.adobe.json

# Generation settings
VARIANTS_PER_PROMPT=1

# Timing and delays (milliseconds)
POST_CLICK_WAIT_MS=9000
BASE_DELAY_MS=1500
JITTER_MS=800
TIMEOUT_MS=60000

# Retry configuration
RETRY=2

# Development only (set to 0 for production)
SLOW_MO_MS=0

# Browser viewport size (legacy Puppeteer)
VIEWPORT_W=1366
VIEWPORT_H=900
